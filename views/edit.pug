extends layout

block content
  h3 Edit Note
  hr
  form(method='POST', action='/edit/'+memo.id)
    #form-group
      label Author:
      input.form-control(name='author', type='text', value=memo.author)
    #form-group
      label Memo:
      input.form-control(name='memo', type='text', value=memo.memo)
    div.mt-3
      input.btn.btn-secondary(type='submit',value='SUBMIT')
      a(href='/').btn.btn-secondary.ml-3 CANCEL
